@model Brand
@{
    ViewBag.Title = "Brand";
}
<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-edit mr-1"></i>
        Edit
    </div>

    <div class="card-body">
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BrandId" />
    <div class="form-group">
        <label asp-for="BrandName">Name</label>
        <div>
            <input class="form-control" type="text" asp-for="BrandName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <div>
            <input class="form-control" type="text" asp-for="Description" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Image</label>        
        <input type="hidden" asp-for="ImageUrl" />
        <div class="custom-file">
            <input type="file" name="f" class="custom-file-input" id="validatedCustomFile"/>
            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">
            Save Changes
        </button>
    </div>
</form>
</div>
    </div>

