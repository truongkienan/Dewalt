@model LoginModel

@{
    Layout = "_LayoutAuth";
    ViewBag.Title = "Login";
}

<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
    <div class="card-body">
        <div asp-validation-summary="All"></div>
        <form method="post">
            <div class="form-group">
                <label class="small mb-1" asp-for="Username">Username</label>
                <input class="form-control py-4" asp-for="Username" placeholder="Enter username" />
            </div>
            <div class="form-group">
                <label class="small mb-1" asp-for="Password">Password</label>
                <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" asp-for="Remember" type="checkbox" />
                    <label class="custom-control-label"  asp-for="Remember">Remember password</label>
                </div>
            </div>
            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">                
                <button class="btn btn-primary">Login</button>                
            </div>
        </form>
    </div>
    <div class="card-footer text-center">
        <div class="small"><a href="/dashboard/auth/register">Need an account? Sign up!</a></div>
    </div>
</div>